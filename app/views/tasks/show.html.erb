<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<div>
  <%= link_to "Back to list", tasks_path %>
<br>
  <%= link_to "Edit task", edit_task_path(@task) %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
